{
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "baseUrl": "./src/",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "paths": {
            "@types/*": ["types/*"],
            "@utils/*": ["utils/*"],
            "@components/*": ["components/*"],
            "@hooks/*": ["hooks/*"],
            "@styles/*": ["styles/*"]
        },
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,

        /* Additional rules */
        "strictNullChecks": true, // Enforces explicit handling of null and undefined
        "noImplicitAny": true, // Disallows the use of 'any' unless explicitly declared
        "noImplicitReturns": true, // Ensures all code paths in functions return a value
        "noImplicitThis": true, // Ensures 'this' is properly typed
        "alwaysStrict": true, // Adds 'use strict' to every file
        "exactOptionalPropertyTypes": true, // Ensures optional properties are strictly typed
        "noPropertyAccessFromIndexSignature": true, // Prevents unsafe access to index signatures
        "useUnknownInCatchVariables": true, // Forces 'unknown' type for catch variables
        "noImplicitOverride": true, // Requires 'override' modifier when overriding methods
        "allowSyntheticDefaultImports": true // Allows default imports for compatibility
    },
    "include": ["src"]
}
